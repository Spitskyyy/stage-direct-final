{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100 light:bg-gray-900">
    <div class="w-full max-w-md p-4 bg-white border border-gray-200 rounded-lg shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <h5 class="text-2xl font-medium text-gray-900 dark:text-white text-center mb-6">Détails de l'utilisateur</h5>

        <dl class="space-y-4">
            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">ID</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.id }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Email</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.email }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Roles</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.roles ? user.roles|json_encode : '' }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Prénom</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.firstname }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Nom</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.lastname }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Classe</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.grade }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Spécialité</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.speciality }}</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Vérifié</dt>
                <dd class="text-sm text-gray-900 dark:text-white">{{ user.isVerified ? 'Oui' : 'Non' }}</dd>
            </div>
        </dl>

        <div class="mt-6 flex justify-between">
            <a href="{{ path('app_user_index') }}" 
                class="text-sm font-medium text-blue-700 hover:underline dark:text-blue-500">
                Retour à la liste
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                class="text-sm font-medium text-blue-700 hover:underline dark:text-blue-500">
                Modifier
            </a>
        </div>

        <div class="mt-4">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}