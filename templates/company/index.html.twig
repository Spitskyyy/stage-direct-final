{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <br><br><br>
    <div class="min-h-screen flex items-center justify-center">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-4 w-full max-w-8xl">
            <div class="flex flex-column sm:flex-row flex-wrap space-y-4 sm:space-y-0 items-center justify-between pb-4">
                <label for="table-search" class="sr-only">Search</label>
                <div class="relative">
                    <form action="{{ path('app_company_index') }}" method="get">
                        <div id="search-container">
                            <div class="search-group flex gap-2 mb-2">
                                <input type="text" name="search[]" class="block p-2 text-sm border rounded-lg w-80" placeholder="Recherche">
                                <select name="search_field[]" class="block p-2 text-sm border rounded-lg w-48">
                                    <option value="name">Nom</option>
                            <option value="address">Adresse</option>
                            <option value="city">Ville</option>
                            <option value="zip">Code Postal</option>
                            <option value="country">Pays</option>
                            <option value="phone">Téléphone</option>
                            <option value="email">Email</option>
                            <option value="isVerified">Vérifié</option>
                                </select>
                            </div>
                        </div>
                        <button type="button" id="add-search" class="btn btn-secondary mt-2">+</button>
                        <button type="submit" class="btn btn-primary mt-2">Rechercher</button>
                    </form>
                </div>
            </div>
            <table id="company-table" class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Id</th>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Address</th>
                        <th scope="col" class="px-6 py-3">City</th>
                        <th scope="col" class="px-6 py-3">Zip</th>
                        <th scope="col" class="px-6 py-3">Country</th>
                        <th scope="col" class="px-6 py-3">Phone</th>
                        <th scope="col" class="px-6 py-3">Email</th>
                        <th scope="col" class="px-6 py-3">Is_verified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.id }}</td>
                            <td>{{ company.name }}</td>
                            <td>{{ company.address }}</td>
                            <td>{{ company.city }}</td>
                            <td>{{ company.zip }}</td>
                            <td>{{ company.country }}</td>
                            <td>{{ company.phone }}</td>
                            <td>{{ company.email }}</td>
                            <td>{{ company.isVerified ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('app_company_show', {'id': company.id}) }}">Show</a>
                                <a href="{{ path('app_company_edit', {'id': company.id}) }}">Edit</a>
                                {{ include('company/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchContainer = document.getElementById("search-container");
            const addButton = document.getElementById("add-search");
            
            addButton.addEventListener("click", function () {
                const newSearch = document.createElement("div");
                newSearch.classList.add("search-group", "flex", "gap-2", "mb-2");
                
                newSearch.innerHTML = `
                    <input type="text" name="search[]" class="block p-2 text-sm border rounded-lg w-80" placeholder="Recherche">
                    <select name="search_field[]" class="p-2 text-sm border rounded-lg w-48">
                        <option value="name">Nom</option>
                        <option value="address">Adresse</option>
                        <option value="city">Ville</option>
                        <option value="zip">Code Postal</option>
                        <option value="country">Pays</option>
                        <option value="phone">Téléphone</option>
                        <option value="email">Email</option>
                        <option value="isVerified">Vérifié</option>
                    </select>
                    <button type="button" class="remove-search ml-2 p-1 bg-red-500 text-white rounded">-</button>
                `;
                
                searchContainer.appendChild(newSearch);

                newSearch.querySelector(".remove-search").addEventListener("click", function () {
                    searchContainer.removeChild(newSearch);
                });
            });
        });
    </script>
{% endblock %}
