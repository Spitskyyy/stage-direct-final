{% extends 'base.html.twig' %}

{% block title %}Entreprises en attente de validation{% endblock %}

{% block body %}
    <br><br><br>

    <div class="min-h-screen flex items-center justify-center">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-4 w-full max-w-8xl">
            <h1 class="text-2xl font-bold mb-4">Entreprises en attente de validation</h1>

            <!-- Tableau des entreprises -->
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Id</th>
                        <th scope="col" class="px-6 py-3">Nom</th>
                        <th scope="col" class="px-6 py-3">Adresse</th>
                        <th scope="col" class="px-6 py-3">Ville</th>
                        <th scope="col" class="px-6 py-3">Code Postal</th>
                        <th scope="col" class="px-6 py-3">Pays</th>
                        <th scope="col" class="px-6 py-3">Téléphone</th>
                        <th scope="col" class="px-6 py-3">Email</th>
                        <th scope="col" class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for company in company %}
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                            <td class="px-6 py-4">{{ company.id }}</td>
                            <td class="px-6 py-4">{{ company.name }}</td>
                            <td class="px-6 py-4">{{ company.address }}</td>
                            <td class="px-6 py-4">{{ company.city }}</td>
                            <td class="px-6 py-4">{{ company.zip }}</td>
                            <td class="px-6 py-4">{{ company.country }}</td>
                            <td class="px-6 py-4">{{ company.phone }}</td>
                            <td class="px-6 py-4">{{ company.email }}</td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col space-y-2">
                                    <a href="{{ path('company_verify', {'id': company.id}) }}" 
                                       class="font-medium text-green-600 hover:underline">
                                        Valider
                                    </a>
                                    <a href="{{ path('company_refuse', {'id': company.id}) }}"
                                       class="font-medium text-red-600 hover:underline"
                                       onclick="return confirm('Êtes-vous sûr de vouloir refuser cette entreprise ?')">
                                        Refuser
                                    </a>
                                    <a href="{{ path('app_company_show', {'id': company.id}) }}"
                                       class="font-medium text-blue-600 hover:underline">
                                        Voir
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="px-6 py-4 text-center">Aucune entreprise en attente de validation.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
