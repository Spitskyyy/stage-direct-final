{% extends 'base.html.twig' %}

{% block title %}Entreprise en attente de validation
{% endblock %}

{% block body %}
	<h1>entreprise en attente de validation</h1>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom</th>
				<th>Address</th>
				<th>Ville</th>
				<th>Code postal</th>
				<th>Pay</th>
				<th>Téléphone</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for company in company %}
				<tr>
					<td>{{ company.id }}</td>
					<td>{{ company.name }}</td>
					<td>{{ company.address }}</td>
					<td>{{ company.city }}</td>
					<td>{{ company.zip }}</td>
					<td>{{ company.country }}</td>
					<td>{{ company.phone }}</td>
					<td>{{ company.email }}</td>

					<td>
						<a href="{{ path('company_verify', {'id': company.id}) }}" class="btn btn-success">Valider</a>

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun entreprise en attente.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
