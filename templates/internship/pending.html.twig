{% extends 'base.html.twig' %}

{% block title %}Stages en attente de validation{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-5xl p-6 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white text-center mb-6">
            Stages en attente de validation
        </h1>

        <div class="overflow-x-auto">
            <table class="min-w-full border-collapse border border-gray-300 dark:border-gray-600 shadow-md">
                <thead>
                    <tr class="bg-gray-200 dark:bg-gray-700">
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-900 dark:text-white">ID</th>
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-900 dark:text-white">Titre</th>
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-900 dark:text-white">DÃ©but</th>
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-900 dark:text-white">Fin</th>
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-900 dark:text-white">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for internship in internships %}
                        <tr class="border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                            <td class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-800 dark:text-white text-center">{{ internship.id }}</td>
                            <td class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-800 dark:text-white">{{ internship.title }}</td>
                            <td class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-800 dark:text-white text-center">
                                {{ internship.startDate ? internship.startDate|date('Y-m-d') : 'N/A' }}
                            </td>
                            <td class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-gray-800 dark:text-white text-center">
                                {{ internship.endDate ? internship.endDate|date('Y-m-d') : 'N/A' }}
                            </td>
                            <td class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-center">
                                <a href="{{ path('internship_verify', {'id': internship.id}) }}" 
                                    class="inline-block px-4 py-2 text-white bg-green-600 hover:bg-green-700 rounded-lg shadow-md transition">
                                    Valider
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-gray-600 dark:text-gray-300 py-4">
                                Aucun stage en attente.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
